{
  "presets": ["module:@react-native/babel-preset", "nativewind/babel"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@": "./",
          "@src": "./src",
          "@assets": "./assets",
          "@components": "./src/components",
          "@data": "./src/data",
          "@hooks": "./src/hooks",
          "@screens": "./src/screens",
          "@services": "./src/services",
          "@stores": "./src/stores",
          "@themes": "./src/themes",
          "@utils": "./src/utils"
        }
      }
    ],
    "react-native-reanimated/plugin"
  ]
}
